<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee https://java.sun.com/xml/ns/javaee/web-app_3_1.xsd">



	<filter>
	    <filter-name>encodingFilter</filter-name>
	    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
	    	<init-param>
	    		<param-name>encoding</param-name>
	    		<param-value>UTF-8</param-value>
			</init-param>
	</filter>
	   
	<filter-mapping>
	    <filter-name>encodingFilter</filter-name>
		<url-pattern>/</url-pattern>
	</filter-mapping>

<!-- Spring security 필터 -->
	
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
<!-- Spring security 필터 끝 -->

	<!-- The definition of the Root Spring Container shared by all Servlets and Filters -->
	<!-- root-context.xml을 제일 먼저 읽어들임. -->
	<context-param>
	
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:config/spring/root-ctx.xml,
<!-- Spring security 관련 추가 -->
						 classpath:config/spring/security-ctx.xml</param-value>
		</init-param>
		<init-param>
			<param-name>dispatchOptionsRequest</param-name>
			<param-value>true</param-value>
		</init-param>
<!-- 스프링 security 관련 추가 끝-->
	</context-param>
	
	<!-- Creates the Spring Container shared by all Servlets and Filters -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- Processes application requests -->
	<!-- DispatcherServlet -->
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
		<!-- servlet-context.xml을 그 다음에 읽어들인다.  -->
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:config/spring/servlet-ctx.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
		<!-- DispatcherServlet  컨트롤러 할당 -->
		<!-- DispatcherServlet url mapping -->
	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/</url-pattern>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

</web-app>
